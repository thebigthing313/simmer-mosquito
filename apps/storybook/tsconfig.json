{
	"extends": "@simmer/typescript-config/react-library.json",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"target": "esnext",
		"moduleResolution": "Bundler",
		"module": "esnext",
		"skipLibCheck": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"jsx": "react-jsx",
		"types": ["vite/client"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@simmer/ui/*": ["../../packages/ui/src/*"]
		}
	},
	"include": [".storybook/**/*", "stories/**/*", "src/**/*"],
	"exclude": ["node_modules", "dist", "storybook-static"]
}
