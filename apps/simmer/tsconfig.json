{
	"extends": "@simmer/typescript-config/vite.json",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"target": "es2022",
		"moduleResolution": "Bundler",
		"module": "esnext",
		"skipLibCheck": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"jsx": "react-jsx",
		"types": ["vite/client"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@simmer/ui/*": ["../../packages/ui/src/*"],
			"@simmer/lib/*": ["../../packages/lib/src/*"],
			"@simmer/forms/*": ["../../packages/forms/src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "src/env.d.ts"],
	"exclude": ["node_modules"]
}
